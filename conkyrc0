# ..: CLOCK & CALENDAR :..
${color d7d7d7}${offset 56}${voffset -1}${cpugraph cpu6 17,1}${voffset -3}${hr 2}${color3}

${voffset -33}${offset 152}${font neuropol:size=20}${time %H:%M}${font}  ${voffset -3}${font UbuntuMono-B:size=12}$uptime
${voffset -5}${offset 124}${cpubar cpu6 0, 200}${voffset 2}${color1}
${voffset -5}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==1'}
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==2'}
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==3' | sed /" $JOUR "/s/" $JOUR "/" "'${color #059df0}'"$JOUR"'${color2}'" "/}
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==4' | sed /" $JOUR "/s/" $JOUR "/" "'${color #059df0}'"$JOUR"'${color2}'" "/}  
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==5' | sed /" $JOUR "/s/" $JOUR "/" "'${color #059df0}'"$JOUR"'${color2}'" "/}  
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==6' | sed /" $JOUR "/s/" $JOUR "/" "'${color #059df0}'"$JOUR"'${color2}'" "/}  
${voffset -3}${offset 156}${color2}${execpi 60 JOUR=`date +%e`; cal | awk 'NR==7' | sed /" $JOUR "/s/" $JOUR "/" "'${color #059df0}'"$JOUR"'${color2}'" "/}  

#..: CPU USAGE :..
#--- if you use a multi-core system, change values ---
#--- in this case, you may cange position of objects (offset, voffset) ---
${color d7d7d7}${offset 91}${voffset 3}${cpugraph cpu6 17,1}${voffset -3}${hr 2}${color3}
${voffset -12}${offset 130}${execi 1000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq | cut -c 1-26}
${voffset -5}${offset 124}${cpubar cpu6 0, 200}${voffset 2}${color1}
${offset 150}Cpu1: ${goto 195}${cpu cpu1}% ${goto 225}(${freq 1} MHz)
${offset 150}Cpu2: ${goto 195}${cpu cpu2}% ${goto 225}(${freq 2} MHz)
${offset 150}Cpu3: ${goto 195}${cpu cpu3}% ${goto 225}(${freq 3} MHz)
${offset 150}Cpu4: ${goto 195}${cpu cpu4}% ${goto 225}(${freq 4} MHz)
${offset 150}CpuT: ${goto 195}${hwmon 1 temp 1} 째C
